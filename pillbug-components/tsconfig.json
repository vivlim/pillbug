{
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": [
    "vite/client",
    "@testing-library/jest-dom"
    ],
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": [
        "DOM",
        "ESNext",
        "DOM.Iterable",
        "ScriptHost",
        "WebWorker"
    ],
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}